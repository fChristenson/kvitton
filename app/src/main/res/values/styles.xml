<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">@dimen/menu_height</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/menu_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">@dimen/font_lg</item>
    </style>

    <style name="text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_md</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="data_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/margin_md</item>
        <item name="android:layout_height">52dp</item>
    </style>

</resources>
